<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!--region Font sizes-->
    <system:Double x:Key="FontSize.Small">10</system:Double>
    <system:Double x:Key="FontSize.Normal">14</system:Double>
    <system:Double x:Key="FontSize.Large">30</system:Double>
    <!--endregion-->

    <!--region Font families-->
    <FontFamily x:Key="FontFamily.NotoSans">../Fonts/NotoSans/#Noto Sans</FontFamily>
    <FontFamily x:Key="FontFamily.FontAwesome.Regular">../Fonts/FontAwesome/#Font Awesome 6 Free Regular</FontFamily>
    <FontFamily x:Key="FontFamily.FontAwesome.Solid">../Fonts/FontAwesome/#Font Awesome 6 Free Solid</FontFamily>
    <FontFamily x:Key="FontFamily.RibeyeMarrow">../Fonts/RibeyeMarrow/#Ribeye Marrow</FontFamily>
    <!--endregion-->


</ResourceDictionary>