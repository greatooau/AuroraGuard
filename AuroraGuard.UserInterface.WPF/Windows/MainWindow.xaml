<Window x:Class="AuroraGuard.UserInterface.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AuroraGuard.UserInterface.WPF.Windows"
        xmlns:v="clr-namespace:AuroraGuard.UserInterface.WPF.Views"
        xmlns:vm="clr-namespace:AuroraGuard.ViewModels.Views;assembly=AuroraGuard.ViewModels"
        mc:Ignorable="d"
        Title="Aurora Guard" Height="450" Width="800">
    <!-- ReSharper disable once Xaml.BindingWithoutContextNotResolved -->
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type vm:MainViewViewModel}">
                <v:MainView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
